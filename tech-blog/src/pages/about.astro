// Markdownを手動でHTMLに変換（シンプルな実装）
const formatMarkdown = (md: string) => {
  return md
    .split('\n')
    .map((line) => {
      // 見出し
      if (line.startsWith('### ')) {
        return `<h3>${line.slice(4)}</h3>`
      }
      if (line.startsWith('## ')) {
        return `<h2>${line.slice(3)}</h2>`
      }
      if (line.startsWith('# ')) {
        return `<h1>${line.slice(2)}</h1>`
      }
      // リスト
      if (line.startsWith('- ')) {
        return `<li>${line.slice(2)}</li>`
      }
      // 強調
      if (line.startsWith('**') && line.endsWith('**')) {
        return `<p><strong>${line.slice(2, -2)}</strong></p>`
      }
      // リンク
      const linkRegex = /\[([^\]]+)\]\(([^)]+)\)/g
      const withLinks = line.replace(linkRegex, '<a href="$2">$1</a>')

      // 空行
      if (line.trim() === '') {
        return ''
      }
      // 通常のテキスト
      return `<p>${withLinks}</p>`
    })
    .join('\n')
}
