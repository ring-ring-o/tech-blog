---
interface Props {
  currentPage: number
  totalPages: number
  baseUrl?: string
}

const { currentPage, totalPages, baseUrl = '' } = Astro.props

const getPageUrl = (page: number) => {
  if (page === 1) return baseUrl || '/'
  return `${baseUrl}/page/${page}`
}
---

{
  totalPages > 1 && (
    <nav class="flex justify-center items-center gap-8 mt-8" aria-label="ページネーション">
      {/* 前のページ */}
      {currentPage > 1 ? (
        <a
          href={getPageUrl(currentPage - 1)}
          class="flex-1 max-w-xs px-6 py-3 text-center hover:text-accent transition-colors rounded hoverable-area"
          aria-label="前のページ"
        >
          ← 前のページ
        </a>
      ) : (
        <span
          class="flex-1 max-w-xs px-6 py-3 text-center opacity-50 cursor-not-allowed"
        >
          ← 前のページ
        </span>
      )}

      {/* 次のページ */}
      {currentPage < totalPages ? (
        <a
          href={getPageUrl(currentPage + 1)}
          class="flex-1 max-w-xs px-6 py-3 text-center hover:text-accent transition-colors rounded hoverable-area"
          aria-label="次のページ"
        >
          次のページ →
        </a>
      ) : (
        <span
          class="flex-1 max-w-xs px-6 py-3 text-center opacity-50 cursor-not-allowed"
        >
          次のページ →
        </span>
      )}
    </nav>
  )
}

<style>
  .hover\:text-accent:hover {
    color: var(--color-accent);
  }
</style>
