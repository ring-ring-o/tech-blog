---
import { Image } from 'astro:assets'

interface Props {
  src: string
  alt: string
  width?: number
  height?: number
  class?: string
  loading?: 'lazy' | 'eager'
}

const { src, alt, width = 1200, height, class: className = '', loading = 'lazy' } = Astro.props

// publicディレクトリの画像パス
const imagePath = src.startsWith('/') ? src : `/${src}`
---

<img
  src={imagePath}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  class={className}
  decoding="async"
/>

<style>
  img {
    max-width: 100%;
    height: auto;
  }
</style>
