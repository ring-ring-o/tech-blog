{
  "name": "tech-blog",
  "type": "module",
  "version": "0.0.1",
  "description": "Astro + TypeScript + Tailwind CSS による技術ブログサイト",
  "scripts": {
    "dev": "astro dev",
    "dev:demo": "CONTENT_MODE=demo astro dev",
    "dev:prod": "CONTENT_MODE=production astro dev",
    "build": "CONTENT_MODE=production astro build && npx pagefind --site dist",
    "build:demo": "CONTENT_MODE=demo astro build && npx pagefind --site dist",
    "build:astro": "astro build",
    "preview": "astro preview",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "dependencies": {
    "astro": "^5.16.4",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "@biomejs/biome": "^2.3.8",
    "@pagefind/default-ui": "^1.4.0",
    "@tailwindcss/vite": "^4.1.14",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.10",
    "pagefind": "^1.4.0",
    "tailwindcss": "^4.1.14",
    "vitest": "^3.2.4"
  }
}
